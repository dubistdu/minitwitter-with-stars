.page-header

  %h1 Listing tweets

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Text
        %th User name
      -#  %th{colspan: 3}

    %tbody
      - @tweets.each do |tweet|
        %tr
          %td= tweet.text
          %td= tweet.user_name
          %td
            %p
              = tweet.upvote_count
              = story.downvote_count
              = link_to upvote_tweet_path(tweet) do
                -# link_to "<i class='fa fa-chevron-up' aria-hidden='true'>", upvote_tweet_path(tweet)
                %i.fa.fa-star{"aria-hidden" => "true"}
              = link_to downvote_tweet_path(tweet) do
                -# link_to "<i class='fa fa-chevron-up' aria-hidden='true'>", upvote_tweet_path(tweet)
                %i.fa.fa-star-o{"aria-hidden" => "true"}
              = link_to tweet.text, tweet.link
              %em
                Net Value:
                = tweet.net
